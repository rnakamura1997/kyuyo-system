# Application
APP_NAME=kyuuyomeisai
APP_ENV=development
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://kyuuyomeisai_app:password@localhost:5432/kyuuyomeisai
DATABASE_SYNC_URL=postgresql://kyuuyomeisai_app:password@localhost:5432/kyuuyomeisai

# Security
JWT_SECRET=change-this-to-random-64-char-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Redis
REDIS_URL=redis://localhost:6379/0

# File Storage
FILE_STORAGE_PATH=/var/kyuuyomeisai/files

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# Encryption
ENCRYPTION_KEY=change-this-to-random-string
